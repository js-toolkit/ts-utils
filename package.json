{
  "name": "@vzh/ts-utils",
  "version": "1.16.1",
  "description": "Typescript helper types and utils",
  "author": "VZH",
  "license": "MIT",
  "main": "./index.js",
  "types": "./index.d.ts",
  "scripts": {
    "clean": "rimraf dist/*",
    "copy:configs": "copyfiles package.json .npmignore LICENSE README.md ./dist/",
    "build": "npm run clean && tsc --project ./tsconfig.json",
    "build-to-tutoron": "tsc --project ./tsconfig.json --outDir '/home/vladimir/dev/sources/tutoron/node_modules/@vzh/ts-utils/'",
    "build-to-reflexy": "tsc --project ./tsconfig.json --outDir '/home/vladimir/dev/sources/reflexy/node_modules/@vzh/ts-utils/'",
    "build-to-react-components": "tsc --project ./tsconfig.json --outDir '../react-components/node_modules/@vzh/ts-utils/'",
    "build-to-mobx-utils": "tsc --project ./tsconfig.json --outDir '../mobx-utils/node_modules/@vzh/ts-utils/'",
    "build-to-player": "tsc --project ./tsconfig.json --outDir '/home/vladimir/dev/sources/player/node_modules/@vzh/ts-utils'",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "patch-publish": "npm run build && npm version patch && npm run copy:configs && npm publish ./dist && git push origin master --follow-tags",
    "minor-publish": "npm run build && npm version minor && npm run copy:configs && npm publish ./dist && git push origin master --follow-tags",
    "major-publish": "npm run build && npm version major && npm run copy:configs && npm publish ./dist && git push origin master --follow-tags"
  },
  "devDependencies": {
    "@types/jest": "^26.0.19",
    "@types/lodash.debounce": "^4.0.6",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "@vzh/configs": "^3.71.1",
    "copyfiles": "^2.4.1",
    "eslint": "^7.16.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.0",
    "jest": "^26.6.3",
    "lodash.debounce": "^4.0.8",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  }
}
